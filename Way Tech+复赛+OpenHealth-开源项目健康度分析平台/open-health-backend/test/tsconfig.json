{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "lib": ["ES2021", "ES2020"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "..",
    "module": "CommonJS",
    "paths": {
      "~": ["./src"],
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "declaration": true,
    "noEmit": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./**/*.ts"
  ]
}
